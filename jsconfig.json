{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["src/components/*"],
      "routes/*": ["src/routes/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"],
      "images/*": ["src/images/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}